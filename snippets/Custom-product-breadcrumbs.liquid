{%- liquid
  assign p = product

  # 1) 商品ジャンルオブジェクト
  assign genre_obj = nil
  if p.metafields.product.product_genre_object != blank
    assign genre_obj = p.metafields.product.product_genre_object.value
  elsif p.metafields.custom.product_genre_object != blank
    assign genre_obj = p.metafields.custom.product_genre_object.value
  endif

  # 2) 索引用オブジェクト
  assign index_obj = nil
  if p.metafields.product.kana_index_object != blank
    assign index_obj = p.metafields.product.kana_index_object.value
  elsif p.metafields.custom.product_index_object != blank
    assign index_obj = p.metafields.custom.product_index_object.value
  endif

  # 3) 作品オブジェクト
  assign series_obj = nil
  if p.metafields.product.product_series_object != blank
    assign series_obj = p.metafields.product.product_series_object.value
  elsif p.metafields.custom.product_type_the_work != blank
    assign series_obj = p.metafields.custom.product_type_the_work.value
  elsif p.metafields.custom.product_the_work != blank
    assign series_obj = p.metafields.custom.product_the_work.value
  endif

  # 4) 商品カテゴリオブジェクト
  assign category_obj = nil
  if p.metafields.product.product_category_object != blank
    assign category_obj = p.metafields.product.product_category_object.value
  elsif p.metafields.custom.product_product_category_object != blank
    assign category_obj = p.metafields.custom.product_product_category_object.value
  endif
-%}

