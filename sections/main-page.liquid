

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="l-page">
  <div class="l-container">
    <div class="section page-width-content color-{{ section.settings.color_scheme }}">
      <div
        class="
          spacing-style
          layout-panel-flex
          layout-panel-flex--column
          section-content-wrapper
          mobile-column
        "
        style="
          {% render 'layout-panel-style', settings: section.settings %}
          {% render 'spacing-style', settings: section.settings %}
        "
      >
        {% liquid
          assign breadcrumb_level_1_title = nil
          assign breadcrumb_level_1_url = nil

          if page.handle == 'member-rank' or page.handle == 'mail-magazine' or page.handle == 'withdrawal'
            assign breadcrumb_level_1_title = 'マイページ'
            assign breadcrumb_level_1_url = '/pages/mypage'
          endif
        %}

        {%- if breadcrumb_level_1_title != nil -%}
          {%- render 'page-breadcrumbs',
            level_1_title: breadcrumb_level_1_title,
            level_1_url: breadcrumb_level_1_url,
            current_title: page.title
          -%}
        {%- else -%}
          {%- render 'page-breadcrumbs', current_title: page.title -%}
        {%- endif -%}

        {% content_for 'blocks' %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:names.page",
  "class": "section-wrapper",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_divider"
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        }
      ],
      "default": "column",
      "visible_if": "{{ section.settings.gap < 0 }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
