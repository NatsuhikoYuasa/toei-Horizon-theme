              "initial_preorder_cutoff_note": {{ variant.metafields.variant.initial_preorder_cutoff_note | default: blank | strip_newlines | replace: '<br>', '' | replace: '<br />', '' | json }},
              "notes_html": {{ variant.metafields.variant.notes | default: blank | newline_to_br | json }},
