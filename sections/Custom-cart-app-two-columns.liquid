{%- liquid
  assign has_preorder = false
  assign has_regular = false

  for item in cart.items
    assign v = item.variant
    assign is_preorder = false

    # ★ 予約フラグ：variant メタフィールド is_preorder を見る
    if v.metafields.variant.is_preorder
      assign is_preorder = true
    endif

    if is_preorder
      assign has_preorder = true
    else
      assign has_regular = true
    endif
  endfor

  assign delivery_mode = 'none'
  if has_preorder and has_regular
    assign delivery_mode = 'mixed'
      # ② 既発＋予約
  elsif has_preorder
    assign delivery_mode = 'preorder_only'
      # ① 予約のみ
  elsif has_regular
    assign delivery_mode = 'regular_only'
      # ③ 既発のみ
  endif
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<section
  id="cart-app-two-columns-{{ section.id }}"
  class="section section--{{ section.settings.section_width }} cart-app-two-columns"
>
  <div
    class="cart-app-two-columns__inner spacing-style"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {%- assign blocks = section.blocks -%}

    {%- if blocks.size > 0 -%}
      {%- assign first_block = blocks.first -%}

      <!-- 左カラム -->
      <div
        class="cart-app-two-columns__column cart-app-two-columns__column--left"
        data-delivery-mode="{{ delivery_mode }}"
      >
        {% render first_block %}
      </div>

      <!-- 右カラム ＋ 合計 -->
      {%- if blocks.size > 1 -%}
        <div class="cart-app-two-columns__column cart-app-two-columns__column--right">
          {%- if customer -%}
            {%- comment -%}
              ログイン済み：
              → アプリ由来の「ポイントを利用する」等をそのまま表示
            {%- endcomment -%}
            {%- for block in blocks offset: 1 -%}
              {% render block %}
            {%- endfor -%}

          {%- else -%}
            {%- comment -%}
              未ログイン：
              → 見出し＋「ログインが必要です」メッセージだけ表示
            {%- endcomment -%}
            <p class="cart-points-title">ポイントを利用する</p>

            <p class="cart-points-login-message">
              ポイントを利用するには
              <a href="{{ routes.account_login_url }}?return_url={{ request.path | url_encode }}"> ログイン </a>
              が必要です。
            </p>
          {%- endif -%}

          <div class="cart-app-two-columns__total-box">
            {% comment %}
              wb03 小計出したいならコメント解除
              <div class="cart-app-two-columns__subtotal-line">
                <span class="cart-app-two-columns__subtotal-label">小計</span>
                <span class="cart-app-two-columns__subtotal-price">
                  {{ cart.items_subtotal_price | money }}
                </span>
              </div>
            {% endcomment %}

            {%- if cart.cart_level_discount_applications.size > 0 -%}
              {%- for discount_application in cart.cart_level_discount_applications -%}
                <div class="cart-app-two-columns__discount-line">
                  <span class="cart-app-two-columns__discount-label">
                    {{ discount_application.title }}
                  </span>
                  <span class="cart-app-two-columns__discount-price">
                    -{{ discount_application.total_allocated_amount | money }}
                  </span>
                </div>
              {%- endfor -%}
            {%- endif -%}

            <div class="cart-app-two-columns__total-line">
              <span class="cart-app-two-columns__total-label">合計</span>
              <span class="cart-app-two-columns__total-price">
                {{ cart.total_price | money }}
                <span class="cart-app-two-columns__total-tax">（税込）</span>
              </span>
            </div>

            <p class="cart-app-two-columns__tax-note">税込で、配送料は購入手続き時に計算されます</p>
          </div>
        </div>
      {%- endif -%}
    {%- endif -%}

    <!-- ▼ 2カラムの下：ボタンだけを全幅で中央配置 -->
    <div class="cart-app-two-columns__buttons-row">
      <div class="cart-app-two-columns__buttons">
        <a
          href="{{ routes.root_url }}"
          class="cart-app-two-columns__button cart-app-two-columns__button--outline"
        >
          お買い物を続ける
        </a>

        <button
          type="submit"
          class="cart-app-two-columns__button cart-app-two-columns__button--primary"
          name="checkout"
          form="cart-form"
        >
          購入手続きへ
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 1) 見出し「ご利用可能ポイント」→「ポイントを利用する」
    var header = document.querySelector('.easy-points-account__header');
    if (header) {
      header.textContent = 'ポイントを利用する';
    }

    // 2) 5,000 ポイント → 5,000 ポイントが利用可能です
    var balanceElm = document.querySelector('.easy-points-account__balance [data-loyal-target="balance"]');
    if (balanceElm) {
      var txt = balanceElm.textContent.trim(); // 例: "5,000 ポイント"
      txt = txt.replace(/ポイント.*/, 'ポイントが利用可能です');
      balanceElm.textContent = txt;
    }

    // 3) ポイント入力欄の設定
    var input = document.getElementById('ep-block-redemption-input');
    if (input) {
      input.removeAttribute('disabled');

      // 数値入力＋カウンター
      input.type = 'number';
      input.setAttribute('inputmode', 'numeric');
      input.setAttribute('pattern', '\\d*');
      input.setAttribute('min', '0');
      input.setAttribute('step', '1');

      input.placeholder = 'ポイントを入力';
      input.value = '';
    }

    // 4) 既存ラベルは「利用ポイント」にして非表示
    var existingLabel = document.querySelector('label[for="ep-block-redemption-input"]');
    if (existingLabel) {
      existingLabel.textContent = '利用ポイント';
      existingLabel.style.display = 'none';
    }

    // 5) 入力欄の「上」に表示するラベルを .easy-points-form__input の中に追加
    var formInput = document.querySelector('.easy-points-form__input');
    if (formInput && !formInput.querySelector('.cart-points-input-label')) {
      var topLabel = document.createElement('p');
      topLabel.className = 'cart-points-input-label';
      topLabel.textContent = '利用ポイント';
      formInput.insertBefore(topLabel, formInput.firstElementChild);
    }

    // 6) 「適用」ボタンの文言
    var redeemBtn = document.querySelector('.easy-points-button__redeem.button');
    if (redeemBtn) {
      redeemBtn.textContent = '適用';
    }
  });


  document.addEventListener('DOMContentLoaded', function () {
  // 左カラムに付けた data-delivery-mode を取得
  var column = document.querySelector(
    '.cart-app-two-columns__column--left[data-delivery-mode]'
  );
  if (!column) return;

  var mode = column.getAttribute('data-delivery-mode'); // preorder_only / mixed / regular_only

  // AMP のウィジェットは読み込みが遅いのでポーリングで待つ
  var tries = 0;
  var timer = setInterval(function () {
    tries++;
    if (setupDeliveryWidget(mode) || tries > 50) {
      clearInterval(timer);
    }
  }, 200);

  function setupDeliveryWidget(mode) {
    var root = document.getElementById('cart-delivery-datetime_section_os2');
    if (!root) return false;

    var titles = root.querySelectorAll('.delivery-title');
    if (titles.length < 3) return false;

    // 0: 「お届け希望日時」, 1: 「お届け希望日」, 2: 「お届け希望時間」
    var dateTitle = titles[1];
    var timeTitle = titles[2];

    var dateContainer = dateTitle ? dateTitle.nextElementSibling : null;
    var timeContainer = timeTitle ? timeTitle.nextElementSibling : null;
    var minDateCaution = root.querySelector('.delivery-mindate-caution');

    function removePreorderNote() {
      var note = root.querySelector('.delivery-preorder-note');
      if (note) note.remove();
    }

    // ① 予約のみ：日付ブロックを非表示（時間はそのまま）
    if (mode === 'preorder_only') {
      if (dateTitle) dateTitle.style.display = 'none';
      if (dateContainer) dateContainer.style.display = 'none';
      // 念のためメッセージも消す
      removePreorderNote();

      if (timeTitle) timeTitle.style.display = '';
      if (timeContainer) timeContainer.style.display = '';
    }
      // ② 既発 + 予約：日付も時間も表示 + 注意文を「お届け希望日」のすぐ下に追加
      else if (mode === 'mixed') {
        if (dateTitle) dateTitle.style.display = '';
        if (dateContainer) dateContainer.style.display = '';
        if (timeTitle) timeTitle.style.display = '';
        if (timeContainer) timeContainer.style.display = '';

        // 既存があれば一旦削除してから追加
        removePreorderNote();

        // 「お届け希望日」タイトルの直下に注意文を入れる
        if (dateTitle && !root.querySelector('.delivery-preorder-note')) {
          var p = document.createElement('p');
          p.className = 'delivery-preorder-note';
          p.textContent = '予約商品は発売後最短でのお届けになります。';

          // お届け希望日タイトルのすぐ下に挿入
          dateTitle.insertAdjacentElement('afterend', p);
        }
      }
    // ③ 既発のみ：日付・時間ともに通常表示（注意文無し）
    else {
      if (dateTitle) dateTitle.style.display = '';
      if (dateContainer) dateContainer.style.display = '';
      if (timeTitle) timeTitle.style.display = '';
      if (timeContainer) timeContainer.style.display = '';
      removePreorderNote();
    }

    return true;
  }
});

document.addEventListener('DOMContentLoaded', function () {
  // カート一覧テーブルを取得
  var table = document.querySelector('table.cart-items__table');
  if (!table) return;

  var tbody = table.querySelector('tbody');
  if (!tbody) return;

  var observer = new MutationObserver(function (mutations) {
    for (var i = 0; i < mutations.length; i++) {
      var m = mutations[i];

      // tr が削除された or 追加されたタイミングで1回だけリロード
      if (m.type === 'childList' && (m.removedNodes.length > 0 || m.addedNodes.length > 0)) {
        observer.disconnect(); // 二重発火防止
        setTimeout(function () {
          window.location.reload();
        }, 120); // できるだけ速く・でも DOM 更新後に
        break;
      }
    }
  });

  observer.observe(tbody, { childList: true });
});

</script>

