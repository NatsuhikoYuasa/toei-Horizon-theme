  "name": "カート: アプリ2カラム (Custom)",
  "tag": "section",
  "class": "cart-app-two-columns-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "幅",
      "options": [
        { "value": "page-width", "label": "ページ幅" },
        { "value": "full-width", "label": "全幅" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "カラー",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "余白"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "上",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "下",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}
