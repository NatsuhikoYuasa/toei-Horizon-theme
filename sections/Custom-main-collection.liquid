<script
  src="{{ 'results-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

{% javascript %}
  const url = new URL(window.location.href);

  // 商品詳細から戻ってきた時に対象カードまでスクロール
  if (url.hash) {
    document.addEventListener(
      'DOMContentLoaded',
      () => {
        const card = document.getElementById(url.hash.slice(1));
        if (card) {
          card.scrollIntoView({ behavior: 'instant' });
        }
      },
      { once: true }
    );
  }
{% endjavascript %}

{% comment %}
  Custom main collection section for Toei design.
  Horizon 標準構造（results-list + filters + _product-card）を踏襲しつつ、
  レイアウトとスタイルのみをローカルにカスタムします。
{% endcomment %}

<input
  type="checkbox"
  id="collection-filters-toggle-{{ section.id }}"
  class="custom-collection__filters-toggle"
  hidden
>

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<results-list
  class="section product-grid-container custom-collection color-{{ section.settings.color_scheme }}"
  style="--padding-block-start: {{ section.settings.padding-block-start }}px; --padding-block-end: {{ section.settings.padding-block-end }}px;"
  section-id="{{ section.id }}"
  infinite-scroll="{{ section.settings.enable_infinite_scroll }}"
>
  {% render 'skip-to-content-link', href: '#ResultsList', text: 'accessibility.skip_to_results_list' %}

  <div class="custom-collection__tabs">
    <label class="custom-collection__tab" for="collection-filters-toggle-{{ section.id }}">
      {{ 'products.facets.filter_button' | t | default: '絞り込み' }}
    </label>
  </div>

  <div class="custom-collection__wrapper grid gap-style">
    <div class="custom-collection__filters" id="FiltersPanel">
      {% content_for 'block',
        type: 'filters',
        id: 'filters',
        results: collection,
        results_size: collection.products_count
      %}
    </div>

    {% assign products_per_page = 24 %}
    {% if section.settings.enable_infinite_scroll == false %}
      {% assign products_per_page = section.settings.products_per_page %}
    {% endif %}

    {% paginate collection.products by products_per_page %}
      {% capture children %}
        {% for product in collection.products %}
          <li
            id="{{ section.id }}-{{ product.id }}"
            class="product-grid__item product-grid__item--{{ forloop.index0 }}"
            data-page="{{ paginate.current_page }}"
            data-product-id="{{ product.id }}"
            ref="cards[]"
          >
            {% # theme-check-disable %}
            {% content_for 'block', type: '_product-card', id: 'product-card', closest.product: product %}
            {% # theme-check-enable %}
          </li>
        {% endfor %}
      {% endcapture %}

      <div class="custom-collection__products">
        {% render 'product-grid',
          section: section,
          children: children,
          products: collection.products,
          paginate: paginate,
          enable_infinite_scroll: section.settings.enable_infinite_scroll
        %}
      </div>
    {% endpaginate %}
  </div>
</results-list>

{% stylesheet %}
  /* === Layout scaffolding === */
  .custom-collection {
    --custom-collection-filter-width: 280px;
  }

  .custom-collection__wrapper {
    display: grid;
    grid-template-columns: 1fr;
    align-items: start;
    max-width: var(--page-width);
    margin-inline: auto;
    padding-inline: var(--page-margin);
  }

  .custom-collection__products {
    min-width: 0;
  }

  /* Desktop two-column layout */
  @media screen and (min-width: 990px) {
    .custom-collection__wrapper {
      grid-template-columns: var(--custom-collection-filter-width) minmax(0, 1fr);
      column-gap: 32px;
    }
  }

  /* === Filters === */
  .custom-collection__filters {
    display: none;
  }

  /* Toggle-driven visibility on mobile */
  .custom-collection__filters-toggle:checked ~ .custom-collection .custom-collection__wrapper .custom-collection__filters {
    display: block;
  }

  /* Desktop: filters always visible, styled as card */
  @media screen and (min-width: 990px) {
    .custom-collection__filters {
      display: block;
    }
  }

  .custom-collection__filters .facets {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgb(0 0 0 / 0.08);
    padding: 20px 20px 24px;
    border: 1px solid rgb(0 0 0 / 0.04);
    margin-bottom: var(--gap-md);
  }

  @media screen and (min-width: 990px) {
    .custom-collection__filters .facets {
      position: sticky;
      top: calc(var(--header-height, 64px) + var(--gap-lg));
    }
  }

  /* Mobile tab-style filter toggle */
  .custom-collection__tabs {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: var(--gap-sm);
    margin-inline: var(--page-margin);
    margin-bottom: var(--gap-md);
  }

  .custom-collection__tab {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 12px;
    background: #ffffff;
    border: 1px solid rgb(0 0 0 / 0.08);
    box-shadow: 0 6px 16px rgb(0 0 0 / 0.06);
    font-weight: 600;
    cursor: pointer;
  }

  @media screen and (min-width: 990px) {
    .custom-collection__tabs {
      display: none;
    }
  }

  /* === Product grid === */
  .custom-collection .product-grid.product-grid--grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 16px;
  }

  @media screen and (min-width: 990px) {
    .custom-collection .product-grid.product-grid--grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 20px;
    }
  }

  .custom-collection .product-grid__item,
  .custom-collection .product-grid__card {
    overflow: visible;
  }

  /* Product card height and media ratio alignment */
  .custom-collection .product-grid__card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .custom-collection .card-gallery,
  .custom-collection .card-gallery .media,
  .custom-collection .card-gallery .product-media,
  .custom-collection .card-gallery .placeholder-svg {
    aspect-ratio: 2 / 3;
  }

  .custom-collection .card-gallery .media,
  .custom-collection .card-gallery .product-media img {
    object-fit: cover;
  }

  /* Ensure product info stacks below media */
  .custom-collection .product-grid__card .card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Prevent badge clipping */
  .custom-collection .card-gallery {
    overflow: visible;
  }

  /* Responsive spacing for content when filters are hidden on mobile */
  .custom-collection__filters-toggle ~ .custom-collection .custom-collection__wrapper {
    row-gap: var(--gap-lg);
  }
{% endstylesheet %}

